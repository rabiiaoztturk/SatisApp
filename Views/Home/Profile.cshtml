@model Profile

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">

}

<body class="bg-gray-200">
    <div class="max-w-2xl mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
        <div class="flex items-center">
            <div class="ml-6">
                <h2 class="text-2xl font-bold">@Model.User.Nickname</h2>
                <p class="text-gray-600">@@@Model.User.Nickname</p>
                @if (ViewBag.profile)
                {
                    <br />
                    <a class="mt-4 bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600" href="/duzenle/@Model.User.Nickname">Profili Düzenle</a>
                }
            </div>
        </div>
        <div class="mt-6">
            <h3 class="text-xl font-bold mb-4">Yorumlar</h3>
            @foreach (var item in Model.Comments)
            {
                <div class="bg-white p-4 rounded-lg shadow-md mb-4">
                    <p class="text-gray-800">@item.Summary</p>
                    <div class="text-gray-500 text-sm mt-2">@item.CreatedTime.ToString())</div>

                    @if (ViewBag.profile)
                    {
                        <div>
                            <a href="/TweetSil/@item.Id?nickname=@Model.User.Nickname" onclick="return confirm('Emin misin?')" class="btn btn-danger">Sil</a>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</body>