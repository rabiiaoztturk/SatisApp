@if (TempData["AuthError"] != null)
{
    <div class="alert alert-danger mb-3" role="alert">
        @TempData["AuthError"]
    </div>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-center">Giriş Yap</h5>
                    <form action="/Login" method="post" autocomplete="off">
                        <div class="form-group">
                            <label for="nickname">Kullanıcı Adı</label>
                            <input required type="text" id="nickname" name="nickname" class="form-control" placeholder="Kullanıcı Adı" />
                        </div>
                        <div class="form-group">
                            <label for="password">Şifre</label>
                            <input required type="password" id="password" name="password" class="form-control" placeholder="Şifre" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                    </form>
                    <div class="text-center mt-3">
                        <p><a href="/Sifre-unuttum">Şifremi Unuttum</a></p>
                        <p><a href="/home/register">Kayıt Ol</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
