@model List<Product>
@{
    Layout = "_AdminLayout";
}

<h2>Ürünler</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col" width="15%">Ürün Fotoğrafı</th>
            <th scope="col" width="25%">Ürün Adı</th>
            <th scope="col" width="20%">Kategori</th>
            <th scope="col" width="15%">Stok Adedi</th>
            <th scope="col" width="15%">Fiyat</th>
            <th scope="col" width="10%">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <img src="/uploads/@product.Image" alt="Ürün Fotoğrafı" class="product-image" />
                </td>
                <td>@product.Name</td>
                <td>@product.CategoryName</td>
                <td>@product.Stock</td>
                <td>@product.Price.ToString("C2")</td>
                <td>
                    <a href="/admin/duzenle/@product.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a href="/admin/sil/@product.Id" onclick="return confirm('Emin misin?')" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
    }

        .table th, .table td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        .table thead th {
            vertical-align: bottom;
            background-color: #f8f9fa;
            border-bottom: 2px solid #dee2e6;
        }

    .product-image {
        max-width: 100px;
        height: auto;
        display: block;
        margin: auto;
    }

    .btn-sm {
        font-size: 0.875rem;
        padding: 0.25rem 0.5rem;
        line-height: 1.5;
        border-radius: 0.2rem;
    }
</style>